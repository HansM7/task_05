html
    head
        title Productos
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    body 
        div(style="width:60%;margin:auto;margin-top:50px;display:flex;flex-direction:column") 
            form(action="/producto", method="post") 
                input(type="text",name="title",placeholder="Title of product" class="form-control mb-3" required autocomplete="off")
                input(type="text",name="price",placeholder="Price of product" class="form-control mb-3" required autocomplete="off")
                input(type="text",name="thumbnail",placeholder="thumbnail of product" class="form-control mb-3" required autocomplete="off") 
                button(type="submit" class="btn btn-primary" ) Registrar

                            